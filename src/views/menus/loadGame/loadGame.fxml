<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<!-- load game menu -->

<AnchorPane fx:id="loadGamePane" visible="false" prefHeight="269.0" prefWidth="402.0"
            xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.menus.LoadGame">
    <children>
        <ScrollPane layoutY="5.0" prefHeight="209.0" prefWidth="402.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <AnchorPane prefWidth="500.0">
                    <children>
                        <VBox fx:id="savedGames" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="0.0">
                            <children>
                                <Button maxWidth="1.7976931348623157E308" onMouseClicked="#mouseHandler"
                                        mnemonicParsing="false" text="TEST_BUTTON_NOT_ACTUALLY_A_SAVED_GAME_LOL"
                                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>

                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
            <effect>
                <Glow/>
            </effect>
        </ScrollPane>

        <Button mnemonicParsing="false" onMouseClicked="#mouseHandler" text="LOAD" AnchorPane.bottomAnchor="30.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
        <Button mnemonicParsing="false" onMouseClicked="#mouseHandler" text="CANCEL" AnchorPane.bottomAnchor="1.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    </children>

    <stylesheets>
        <URL value="@loadGame.css"/>
    </stylesheets>
</AnchorPane>
